<GridDays@ScrollView>:
    GridLayout:
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        Label:
            id: mainMenu
            size_hint: 1,None
            height: 30
            text: "Horario 2023 PRoA".upper() + " - 5to Año"
            color: 43, 43, 49
            markup: True
            canvas.before:
                Color:
                    rgb: 98/255, 150/255, 209/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_x: 1
        Button:
            size_hint: 1, None
            height: 100
            text: "Lunes"
            size_hint_x: 1
            on_release:
                app.root.current = 'grid_monday'

        Button:
            size_hint: 1, None
            height: 100
            text: "Martes"
            size_hint_x: 1
            on_release:
                app.root.current = 'grid_tuesday'

        Button:
            size_hint: 1, None
            height: 100
            text: "Miércoles"
            size_hint_x: 1
            on_release:
                app.root.current = 'grid_wednesday'

        Button:
            size_hint: 1, None
            height: 100
            text: "Jueves"
            size_hint_x: 1
            on_release:
                app.root.current = 'grid_thursday'

        Button:
            size_hint: 1, None
            height: 100
            text: "Viernes"
            size_hint_x: 1
            on_release:
                app.root.current = 'grid_friday'
        Label:
            size_hint: 1,None
            height: 30
            text: ""
            color: 0,0,0,
            markup: True
            canvas.before:
                Color:
                    rgb: 0/255, 0/255, 0/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_x: 1
        Button:
            size_hint: 1,None
            text: "Salir"
            height: 45
            color: 98/255, 150/255, 209/255, 1
            size_hint_x: None
            width: 120
            on_release:
                app.root.current = 'app.stop()'
        Button:
            size_hint: 1,None
            height: 45
            text: ""
            size_hint: 1,None
            height: 30
            background_color: 0, 0, 0

